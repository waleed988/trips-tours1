<%= stylesheet_link_tag "users" %>
<%= render partial: 'home/navbar'%>

<div class='container text-center effect devise'>
<h2 class = 'mb-5' style='color:#00095e;'><b>Forgot your password?</b></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email ,style:'color:#00095e;' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "Send me reset password instructions" ,class:'login100-form-btn',style:'width:30%;    margin-left: 458px;'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<%= render partial: 'home/footer'%>
