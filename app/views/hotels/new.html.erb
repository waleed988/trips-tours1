<%= stylesheet_link_tag "users" %>
<%= render partial: 'home/navbar'%>

<% if current_user.admin? %>
<div class='text-center effect devise container' style='height:550px;'>
<h2 class = ' mb-5' style='color:#00095e;'><b>Create Hotels</b></h2>
  <%= form_with scope: :hotel, url:hotels_path ,local: true   do |form| %>
      <% if @hotel&.errors&.any? %>
        <ul>
          <% @hotel.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
     <% end %>
        <% flash.each do |type, msg| %>
      <div class="alert alert-info">
        <%= msg %>
      </div>
    <% end %>
        <p>
          <%= form.label :Hotel_Name ,style:'color:#00095e;'%><br>
          <%= form.text_field :name %>
        </p>
       
       <p> 
          <%= form.label :Category ,style:'color:#00095e;' %><br>  
                 <p style='margin-left:520px;    '>          
          <%= form.select :category, options_for_select([['Luxury'],['Comfort'],['Economy']]), {include_blank: 'SELECT CATEGORY*'}, class: 'form-control required date-field ml-5', :onchange => 'Checkselectedone(this.value);' %>        
       </p>
       </p> 
        
         <p>
          <%= form.label :Price_Per_Night ,style:'color:#00095e;' %><br>
          <%= form.text_field :price_per_night%>
        </p> 
        
        <p>
          <%= form.label :Contact_No ,style:'color:#00095e;' %><br>
          <%= form.text_field :contact_no%>
        </p>

        <p>
          <%= form.label :Location ,style:'color:#00095e;' %><br>
          <%= form.text_field :location %>
        </p>

        <p class='mt-5'> 
          <%= form.submit "Add Hotel" ,class:'login100-form-btn',style:'width:20%; margin-left: 515px;'%>
        </p>
      <% end %>
  </div>
<% else%>
  You Do Not Have Access To Do This Action
<% end %>
<%= render partial: 'home/footer'%>
